<div class="row">
  <!-- プロフィール -->
  <div class="col-sm-4 d-none d-sm-inline">
    <div class="card p-2">
      <%= image_tag current_user.avatar.url, class: "card-img-top rouded-circle" %>
      <div class="card-body">
        <h4 class="card-title"><%= "#{@user.name}" %></h4>
        <p class="card-text">
          <span class="text-secondary">ここにユーザ情報が入ります。</span>
        </p>
        <%= movie(movie_id: @user.movie_id.match(/watch\?v=/).post_match) %>
      </div>
    </div>
  </div>

  <div class="col-sm-8">
    <%= form_for @post do |f| %>
      <div class="input-group pb-4 mx-0">
        <%= f.text_field :body, class: "form-control" ,placeholder: "おすすめの動画を投稿しよう"%>

        <span class="input-group-btn">
          <%= f.submit "投稿する", class: "btn btn-primary"%>
        </span>
      </div>
    <% end %>
      <div class="row">
        <div class="col-sm-6">
          <%= render partial: "post", collection: @posts %>
        </div>

        <div class="col-sm-6">
          <%= render partial: "users", collection: @users %>
        </div>
      </div>
  </div>
</div>

<%= paginate @users %>
