<div class="card p-2">
  <%= image_tag current_user.avatar, class: "card-img-top rouded-circle" if current_user.avatar.present? %>
  <div class="card-body">
    <h4 class="card-title"><%= "#{user.name}" %></h4>
    <p class="card-text">
      <span class="text-secondary"><%= "#{user.content}"%></span>
    </p>
  </div>
</div>
